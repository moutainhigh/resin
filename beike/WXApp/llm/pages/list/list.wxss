/* tab */
.tab-wrap {
	width: 750rpx;
	overflow: hidden;
	position: fixed;
	left: 0;
	bottom: 0;
	background: #ffffff;
	box-shadow: 0 -3rpx 6rpx rgba(0,0,0,0.05);
	z-index: 3;
}
.tab-wrap .tab {
	width: 25%;
	height: 100rpx;
	line-height: 150rpx;
	font-size: 24rpx;
	color: #666666;
	float: left;
	text-align: center;
}
.tab-wrap .all {
	background: url(https://appportal.meitianhui.com/image/wxapp/recommend.png) no-repeat center 12rpx;
	background-size: 39rpx 39rpx;
}
.tab-wrap .on.all {
	color: #ff4242;
	background: url(https://appportal.meitianhui.com/image/wxapp/recommend-red.png) no-repeat center 12rpx;
	background-size: 39rpx 39rpx;
}
.tab-wrap .new {
	background: url(https://appportal.meitianhui.com/image/wxapp/new.png) no-repeat center 12rpx;
	background-size: 39rpx 36rpx;
}
.tab-wrap .on.new {
	color: #ff4242;
	background: url(https://appportal.meitianhui.com/image/wxapp/new-red.png) no-repeat center 12rpx;
	background-size: 39rpx 36rpx;
}
.tab-wrap .category {
	background: url(https://appportal.meitianhui.com/image/wxapp/all.png) no-repeat center 12rpx;
	background-size: 39rpx 39rpx;
}
.tab-wrap .on.category {
	color: #ff4242;
	background: url(https://appportal.meitianhui.com/image/wxapp/all-red.png) no-repeat center 12rpx;
	background-size: 39rpx 39rpx;
}
.tab-wrap .forecast {
	background: url(https://appportal.meitianhui.com/image/wxapp/forecast.png) no-repeat center 12rpx;
	background-size: 42rpx 42rpx;
}
.tab-wrap .on.forecast {
	color: #ff4242;
	background: url(https://appportal.meitianhui.com/image/wxapp/forecast-red.png) no-repeat center 12rpx;
	background-size: 42rpx 42rpx;
}
