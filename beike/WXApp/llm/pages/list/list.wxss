.all-goods-bar {
	width: 750rpx;
	height: 80rpx;
	margin-bottom: 12rpx;
}
/* 单行商品 */
.single-goods-list {
	width: 100%;
}
.single-goods {
	overflow: hidden;
	padding: 0 18rpx;
	margin-bottom: 10rpx;
	background-color: #ffffff;
}
.single-goods .left-box {
	float: left;
	width: 250rpx;
	height: 250rpx;
	position: relative;
	box-shadow: 2rpx 0 0 0 #f3f6f5;
}
.single-goods .left-box .goods-pic {
	width: 250rpx;
	height: 250rpx;
}
.single-goods .right-box {
	float: left;
	width: 432rpx;
	height: 250rpx;
	margin-left: 28rpx;
	position: relative;
}
.single-goods .right-box .tit {
	font-size: 32rpx;
	line-height: 38rpx;
	height: 76rpx;
	color: #333333;
	margin-top: 38rpx;
	overflow: hidden;
	position: relative;
	text-indent: 70rpx;
}
.single-goods .right-box .tit .tag {
	display: inline-block;
	padding: 0 8rpx;
	margin-right: 5rpx;
	border-radius: 5rpx;
	text-align: center;
	color: #ffffff;
	position: absolute;
	top: 5rpx;
	left: 0;
	height: 32rpx;
	line-height: 32rpx;
	font-size: 20rpx;
	text-indent: 0;
}
.single-goods .right-box .tit .tb {
	background-color: #ff4400;
}
.single-goods .right-box .price-wrap {
	margin-top: 20rpx;
}
.single-goods .right-box .price-wrap .final-price-wrap {
	color: #333333;
	font-size: 24rpx;
}
.single-goods .right-box .price-wrap .final-price-wrap .unit {
	color: #ff4242;
	font-size: 28rpx;
	font-weight: bold;
	margin: 0 5rpx;
}
.single-goods .right-box .price-wrap .final-price-wrap .final-price {
	color: #ff4242;
	font-size: 36rpx;
	font-weight: bold;
}
.single-goods .right-box .price-wrap .other-price {
	margin-top: 18rpx;
	color: #666666;
	font-size: 24rpx;
}
.single-goods .right-box .price-wrap .other-price .original-price {
	margin-right: 24rpx;
}

/* 一行两个商品 */
.double-goods-list {
	width: 750rpx;
	margin: 0 auto;
	/* background: #f3f6f5; */
	overflow: hidden;
}
.double-goods-list .double-goods {
	width: 333rpx;
	padding: 18rpx;
	float: left;
	position: relative;
	background-color: #ffffff;
	margin-bottom: 12rpx;
}
.double-goods-list .double-goods:nth-child(odd) {
	margin-right: 6rpx;
}
.double-goods-list .double-goods:nth-child(even) {
	margin-left: 6rpx;
}
.double-goods-list .double-goods .goods-pic {
	width: 333rpx;
	height: 333rpx;
}
.double-goods-list .double-goods .txt-wrap {
	color: #999999;
	overflow: hidden;
	padding: 30rpx 0 24rpx 0;
}
.double-goods-list .double-goods .txt-wrap .tit {
	color: #333333;
	font-size: 32rpx;
	padding: 0 75rpx 15rpx 0;
	text-overflow: ellipsis;
	overflow: hidden;
	white-space: nowrap;
	position: relative;
}
.double-goods-list .double-goods .txt-wrap .tag {
	display: inline-block;
	padding: 0 8rpx;
	border-radius: 7rpx;
	text-align: center;
	color: #ffffff;
	position: absolute;
	top: 5rpx;
	right: 0;
	line-height: 32rpx;
	font-size: 20rpx;
}
.double-goods-list .double-goods .txt-wrap .tb {
	background-color: #ff4400;
}
.double-goods-list .double-goods .txt-wrap .price {
	color: #333333;
	font-size: 24rpx;
	padding-top: 10rpx;
}
.double-goods-list .double-goods .txt-wrap .price .unit {
	color: #ff4242;
	font-size: 28rpx;
	margin: 0 6rpx;
	font-weight: bold;
}
.double-goods-list .double-goods .txt-wrap .price .money {
	color: #ff4242;
	font-size: 36rpx;
	font-weight: bold;
}

